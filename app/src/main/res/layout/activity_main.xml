<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

   <TextView
       android:layout_marginTop="@dimen/px160"
       android:textSize="@dimen/px62"
       android:gravity="center"
       android:textStyle="bold"
       android:textColor="@color/text_ffffff"
       android:text="捷豹路虎中国移动端管理平台"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_user"
        android:textColor="@color/text_ffffff"
        android:textSize="@dimen/px46"
        android:lineSpacingExtra="@dimen/px46"
        android:text="您好，刘先生 \n 登录成功"
        android:gravity="center"
        android:layout_marginTop="@dimen/px120"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_goto_net"
        android:textSize="@dimen/px42"
        android:textColor="@color/text_ffffff"
        android:text="进入操作平台"
        android:layout_marginTop="@dimen/px82"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/shape_login_bt"
        android:layout_width="@dimen/px480"
        android:layout_height="@dimen/px110" />
    <TextView
        android:id="@+id/tv_goto_logout"
        android:textSize="@dimen/px42"
        android:textColor="@color/text_ffffff"
        android:text="退出APP登录"
        android:layout_marginTop="@dimen/px42"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/shape_login_bt"
        android:layout_width="@dimen/px480"
        android:layout_height="@dimen/px110" />
    <TextView
        android:layout_gravity="bottom"
        android:textColor="@color/text_ffffff"
        android:textSize="@dimen/px42"
        android:gravity="center|bottom"
        android:text="移动端系统说明：\nAPP仅用于接收系统推送\n移动端其他操作需点击“进入操作平台”完成\n安卓用户关闭APP后将不再接收系统推送"
        android:lineSpacingExtra="@dimen/px36"
       android:layout_marginBottom="@dimen/px86"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>